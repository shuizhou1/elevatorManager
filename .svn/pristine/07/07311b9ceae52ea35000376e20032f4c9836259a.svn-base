<!--  -->
<template>
  <div>
    <!-- form_wraper -->
    <div class="form_wraper">
      <div class="header">查询条件</div>
      <el-form
        ref="form"
        :model="formData"
        class="form"
        style="margin-left:10px"
        label-width="auto"
        :rules="rules"
      >
        <el-row :gutter="20">
          <el-col :span="8">
            <el-form-item label="维保单位" prop="unitName">
              <el-input v-model="formData.unitName"></el-input>
            </el-form-item>
          </el-col>
          <el-col :span="8">
            <el-form-item label="处置状态" prop="maintenanceStatus">
              <el-select v-model="formData.maintenanceStatus" placeholder="请选择">
                <el-option
                  v-for="item in options"
                  :key="item.value"
                  :label="item.label"
                  :value="item.value"
                ></el-option>
              </el-select>
            </el-form-item>
          </el-col>
          <el-col :span="2" :offset="0">
            <el-button @click="getDataList()" type="primary">查询</el-button>
          </el-col>
        </el-row>
      </el-form>
    </div>
    <!-- 维保计划表 -->
    <!-- <div></div> -->
    <el-table :data="wbjlTableData" border v-loading="loading">
      <el-table-column prop="planTime" label="维保计划时间" width="150"></el-table-column>
      <el-table-column prop="unitName" label="维保单位"></el-table-column>
      <el-table-column prop="locals" label="电梯地址"></el-table-column>
      <el-table-column prop="planName" label="处置情况" width="200"></el-table-column>
      <el-table-column prop="maintenanceStatus" label="处置状态" width="150"></el-table-column>
      <el-table-column prop="propertyCheckTime" label="实际完成时间" width="150"></el-table-column>
    </el-table>
    <div class="pagination_wraper">
      <el-pagination
          @size-change="sizeChangeHandle"
          @current-change="currentChangeHandle"
          :current-page="pageIndex"
          :page-sizes="[5, 10, 20, 50]"
          :page-size="pageSize"
          :total="totalCount"
          layout="total, sizes, prev, pager, next, jumper"
    ></el-pagination>
    </div>
  </div>
</template>

<script>
export default {
  data() {
    return {
      loading:false,
      pageSize: 10,
      pageIndex: 1,
      totalCount: 0,
      formData: {
        maintenanceStatus:'',
        unitName:''
      },
      options: [{
          value: '-1',
          label: '未开始'
        }, {
          value: '0',
          label: '待完成'
        }, {
          value: '1',
          label: '已完成'
        }],
      rules: {
        wbdw: [
          {
            required: true,
            message: "维保单位不能为空"
          }
        ],
        czzt: [
          {
            required: true,
            message: "处置状态不能为空"
          }
        ]
      },
      // 维保计划数据
      wbjlTableData: [
      ],
      totalNum: 50 //数据总数
    };
  },
  components: {},
  activated() {
    this.getDataList();
  },
  methods: {
     getDataList(){
      console.log('获取数据');
      this.loading = true;
      this.$http({
        url:this.$http.adornUrl('/maintenanceplan/maintenanceplan/list'),
        method:'get',
        params:this.$http.adornParams({
          unitName:this.formData.unitName,
          maintenanceStatus:this.formData.maintenanceStatus
        })
      }).then(({data})=>{
        console.log('res',data);
        if(data&&data.code==0){
           this.loading = false;
          this.totalCount = data.page.total;
          this.wbjlTableData = data.page.records;
        }
      }).catch(e=>{
        console.log(e);
      })
    },
     // 每页数
    sizeChangeHandle(val) {
      this.pageSize = val;
      this.pageIndex = 1;
      this.getDataList();
    },
    // 当前页
    currentChangeHandle(val) {
      this.pageIndex = val;
      this.getDataList();
    },
  }
};
</script>
<style  scoped>
.pagination_wraper {
  margin: 20px 0;
  text-align: center;
}
</style>